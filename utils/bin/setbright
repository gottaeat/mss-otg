#!/bin/sh
. /mss/etc/funcs
rootcheck

if [ -d '/sys/class/backlight/acpi_video0' ]
 then sysfspath="/sys/class/backlight/acpi_video0"
 else sysfspath="/sys/class/backlight/intel_backlight"
fi

    brightfile="${sysfspath}/brightness"
 maxbrightfile="${sysfspath}/max_brightness"

usage(){
 aprint_usage "{cur}|{-1|+1}|{max}{0-20}"
 aprint_nc
 exit 1
}

setbrite(){
 echo "${1}" > "${brightfile}"
 exit 0
}

aprint_nc
if [ ! -f "${brightfile}" ]
 then
  aprint_fail "brightness file does not exist."
  aprint_nc
  exit 1
 else
  read maxbright < "${maxbrightfile}"
  interval="$(($(cat ${maxbrightfile}) / 20 ))"

  if [ -z "${1}" ]; then usage
   else
    if [ "${1}" -eq "${1}" ] 2>/dev/null;
     then
      setbright="$((${1} * ${interval}))"
     else
      read curbright < "${brightfile}"
      case "${1}" in
       cur)
        lsdetail "current brightness" "${curbright}"
        aprint_nc
        exit 0
       ;;
       -)   setbright="$(( ${curbright} - ${interval}))" ;;
       +)   setbright="$(( ${curbright} + ${interval}))" ;;
       max) setbright="${maxbright}" ;;
       *)   usage                    ;;
      esac
    fi
  fi

  if [ "${setbright}" -ge "${maxbright}" ];   then setbrite "${maxbright}"
  elif [ "${setbright}" -le 0 ]; then setbrite 1
  else setbrite "${setbright}"
  fi
fi
